{
  "name": "rock-paper-scissors",
  "version": "1.0.0",
  "description": "Rock Paper Scissors",
  "main": "index.html",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:all": "html-validator --allfiles --verbose",
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html styleguide.html sass/style.scss js/script.js css/style.css",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build": "npm-run-all build:*",
    "build:clean": "rimraf css",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "watch": "npm-run-all build test -p watch:*",
    "watch:sassprefixer": "onchange -d 100 sass/*.scss sass/**/*.scss -- npm-run-all watch:sass watch:autoprefixer",
    "watch:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "watch:autoprefixer": "autoprefixer-cli css/style.css ",
    "watch:validate": "onchange *.html -- npm-run-all test:all",
    "watch:browsersync": "browser-sync start --server --files css/*.css *.html"
  },
  "keywords": [],
  "author": "Bartek Buga≈Ça",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.26.5",
    "globstar": "^1.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "rimraf": "^2.6.3",
    "allhtml-validator-cli": "git+https://github.com/bartekbugala/allhtml-validator-cli"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:bartekbugala/rock-paper-scissors-v3.git"
  },
  "bugs": {
    "url": "https://git@github.com:bartekbugala/rock-paper-scissors-v3.git/issues"
  },
  "homepage": "https://git@github.com:bartekbugala/rock-paper-scissors-v3.git#readme",
  "dependencies": {}
}
